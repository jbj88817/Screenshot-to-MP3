{
  "name": "shottomp3",
  "version": "1.0.0",
  "description": "",
  "main": "electron-main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec \"npm run build && node dist/server.js\"",
    "desktop": "npm run build && electron .",
    "pack:mac": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "lint": "eslint . || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "p-limit": "^7.1.0",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.shottomp3.app",
    "productName": "ShotToMp3",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron-main.js",
      "src/public/**/*",
      "*.traineddata",
      "!uploads/**"
    ],
    "extraResources": [
      {
        "from": "*.traineddata",
        "to": "traineddata"
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music"
    }
  }
}
